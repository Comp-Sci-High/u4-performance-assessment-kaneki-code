<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Review</title>
    <link rel="stylesheet" href="/description.css">
</head>
<body>
    <header>
        <h1 class="logo">Quoted Horror</h1>
        <nav>
            <a href="/">Home</a>
            <a href="/books">Horror Books</a>
        </nav>
    </header>
   
    <div class="review-container">
        <div class="book-image" style="background-image: url('<%=image%>');"></div>
        <div class="divider"></div>
        <div class="book-info">
            <h2 class="book-title"><%=name%></h2>
            <p class="book-author"><%=author%></p>
            <p class="book-description" id="typewriter-text"></p>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const text = `<%= description %>`; 
            let index = 0;
            const speed = 10; // Typing speed (milliseconds)
            function typeWriter() {
                if (index < text.length) {
                    document.getElementById("typewriter-text").innerHTML += text.charAt(index);
                    index++;
                    setTimeout(typeWriter, speed);
                }
            }
            typeWriter();
        });
    </script>
</body>
</html>
